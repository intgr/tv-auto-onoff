{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "rangeStrategy": "bump",
  "semanticCommitType": "feat",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on saturday"]
  },
  "packageRules": [
    {
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["patch"],
      "groupName": "Cargo patch",
      "schedule": ["before 5am on saturday"]
    }
  ]
}
